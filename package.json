        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
